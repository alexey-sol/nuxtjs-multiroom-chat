{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonJS",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@config/*": ["./server/config/*"],
            "@loaders": ["./server/loaders"],
            "@logger": ["./server/loaders/logger"],
            "@models/*": ["./server/models/*"],
            "@root/*": ["./*"],
            "@services/*": ["./server/services/*"],
            "@utils/*": ["./server/utils/*"]
        }
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
